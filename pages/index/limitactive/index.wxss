/* pages/index/limitactive/index.wxss */

.top-title {
  background: white;
  height: 80rpx;
  text-align: center;
  padding: 0 5rpx;
}

.top-title .van-icon {
  font-size: 45rpx;
  color: #1a1a1a;
  margin-top: 5rpx;
}

.top-title .name {
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
}

.secondsha-img {
  height: 188rpx;
}

.limit-time {
  flex-grow: 1;
}

.limit-time .time {
  background: #999;
  color: white;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
  text-align: center;
}

.delta {
  width: 100%;
  display: flex;
  justify-content: center;
}

.delta>view {
  height: 0;
  width: 0;
  border-width: 10rpx;
  border-style: solid;
  border-color: #009a44 transparent transparent transparent;
}

.active {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #009a44;
  color: white;
  height: 90rpx;
  flex-grow: 1;
  text-align: center;
}

.shops .shop-title {
  font-size: 24rpx;
}

.shops .describle {
  font-size: 20rpx;
  color: #808080;
}

.shops .attr-info {
  width: 70%;
}

.shops {
  margin-top: 10rpx;
  padding: 0 20rpx;
}

.shops .active-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
}

.shops .discount {
  font-size: 18rpx;
}

.shops .remain {
  font-size: 20rpx;
  margin-left: 20rpx;
}

.label {
  margin-right: 10rpx;
}

.money {
  margin-left: 10rpx;
}

.message {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.item, .van-count-down {
  font-size: 20rpx !important;
  color: white !important;
}

.no-good {
  background: #808080;
  border-radius: 12rpx;
  color: white;
  font-size: 20rpx;
  padding: 0 10rpx;
}

.logo {
  margin: 0;
}

.circle-no {
  position: absolute;
  margin-top: -200rpx;
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  color: white;
  line-height: 200rpx;
}

.circle-no>text {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  display: inline-block;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  vertical-align: middle;
}

.now-start {
  background: #808080;
  color: white;
  border-radius: 12rpx;
  font-size:20rpx;padding:0 10rpx;
}
.not-start{
  font-size:20rpx;
  height: 40rpx;
  line-height: 40rpx;
}