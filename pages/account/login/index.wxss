/* pages/account/login/index.wxss */

page {
  background: white;
}

.weixin .wechat .icon-weixin {
  font-size: 60rpx;
}

.weixin {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 89rpx;
}

.weixin .wechat {
  color: white;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  display: flex;
  margin-bottom: 10rpx;
  justify-content: center;
  align-items: center;
  background: #1ea55a;
}

.back .van-icon {
  font-size: 40rpx;
  margin: 10rpx;
}

.account-login {
  padding: 0 84rpx;
}

.account-login .font-color {
  color: #c2c2c2;
}

.login-button {
  margin: 30rpx 0;
  text-align: center;
  background: #1ea55a;
  border-radius: 12rpx;
  height: 80rpx;
}

.login-button button {
  background: none;
  color: white;
  font-size: 32rpx;
  padding: 0;
  line-height: 80rpx;
}

.wechat-login {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  text-align: center;
}

.shop-logo {
  width: 296rpx;
  height: 92rpx;
  margin: 120rpx auto 100rpx;

}

.account-login>view:nth-last-child(n+3) {
  border-bottom: 1px solid #c2c2c2;
}

.account-login input {
  margin-left: 15rpx;
}

.account-login .iconfont {
  color: #46c68a;
}

.account-login .icon-mima54 {
  font-size: 40rpx;
}

.account-login .icon-yonghu {
  font-size: 30rpx;
  margin-left: 6rpx;
}

.account-login .content {
  margin-bottom: 50rpx;
}

.treaty {
  font-size: 20rpx;
}

.treaty text {
  color: #45a371;
}
button {
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 8px;
  padding-right: 8px;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 1.5;
  border-radius: 50%;
  overflow: hidden;
  color: #fff;
  background-color: #1EA55A;
  margin-bottom: 10rpx;
  }
  .button-hover{
    color: #fff !important;
    background-color: #1EA55A !important;
  }  

  .iconfont {
    font-size: 30px;
  }
    
  