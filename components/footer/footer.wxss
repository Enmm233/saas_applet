/* componets/footer/footer.wxss */

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;

  height: 100rpx;
  position: fixed;
  bottom: 0;
  z-index: 3;
  border-top: 1px solid #efefef;
  background: white;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
  object-fit: contain;
}

.footer text {
  font-size: 24rpx;
  color: #999;
}

.footer .active {
  color: #009a44 !important;
}

.footer .nav {
  display: flex;
  flex-direction: column;
  justify-content:center;
  height: 100%;
  width:25%;
  align-items: center;
}
